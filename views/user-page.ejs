<% users.forEach(function(users){ %>
<div class="aw-item">
    <!-- ID -->
    <span class="aw-user-sort-count aw-border-radius-5 active">
                                    <i class="fa fa-bookmark"></i>
                                    <em>1</em>
                                </span>
    <!-- 个人头像 -->
    <a href="#" class="aw-user-img aw-border-radius-5">
        <img src="<%= users.avatar %>">
    </a>
    <!-- 用户名 -->
    <p>
        <a href="#" class="aw-user-name"><%= users.name %></a>
    </p>
    <!-- 积分 -->
    <div class="meta">
        <span><i class="fa fa-bar-chart-o"></i>
            积分<b><%= users.score %></b>
        </span>
        <span>
            <i class="fa fa-commenting-o"></i>
            回复量<b><%= users.reply_count %></b>
        </span>
        <span>
            <i class="fa fa-pencil"></i>
            发表量<b><%= users.article_count %></b>
        </span>
    </div>
    <!-- 关注 -->
    <div class="operate">
        <a href="#" class="follow btn btn-normal btn-success">
            <span>关注</span>
            <em>|</em>
            <b>2</b>
        </a>
    </div>
    <!-- 个性签名 -->
    <p><%= users.motto %></p>
</div>
<% }) %>