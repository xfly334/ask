<!-- 用户列表 -->
<div class="aw-container-wrap">
    <div class="container">
        <div class="row">
            <div class="aw-content-wrap clearfix">
                <div class="col-sm-12 col-md-9 aw-main-content">
                    <div class="aw-mod">
                        <div class="mod-head common-head">
                            <h2>
                                <i class="fa fa-user-circle-o"></i>
                                用户列表
                            </h2>
                        </div>
                        <div class="mod-body aw-people-list">
                            <div class="aw-add-users">
                                <% userCount.forEach(function(userCount){ %>
                                <div class="aw-item">
                                    <!-- ID -->
                                    <span class="aw-user-sort-count aw-border-radius-5 active">
                                    <i class="fa fa-bookmark"></i>
                                    <em>1</em>
                                </span>
                                    <!-- 个人头像 -->
                                    <a href="/user/<%= userCount.name %>" class="aw-user-img aw-border-radius-5">
                                        <img src="<%= userCount.avatar %>">
                                    </a>
                                    <!-- 用户名 -->
                                    <p>
                                        <a href="/user/<%= userCount.name %>" class="aw-user-name"><%= userCount.name %></a>
                                    </p>
                                    <!-- 积分 -->
                                    <div class="meta">
                                    <span>
                                        <i class="fa fa-bar-chart-o"></i>
                                        积分
                                        <b><%= userCount.score %></b>
                                    </span>
                                        <span>
                                        <i class="fa fa-commenting-o"></i>
                                        回复量
                                        <b><%= userCount.reply_count %></b>
                                    </span>
                                        <span>
                                        <i class="fa fa-pencil"></i>
                                        发表量
                                        <b><%= userCount.article_count %></b>
                                    </span>
                                    </div>
                                    <!-- 关注 -->
                                    <!--<div class="operate">
                                        <a href="#" class="follow btn btn-normal btn-success">
                                            <span>关注</span>
                                            <em>|</em>
                                            <b>2</b>
                                        </a>
                                    </div>-->
                                    <!-- 个性签名 -->
                                    <p><%= userCount.motto %></p>
                                </div>
                                <% }) %>
                            </div>
                            <div class="page-control clearfix">
                                <div class="pagination pull-right">
                                    <% pageArr.forEach(function(page){ %>
                                    <li class="<%= page == currentPage ? 'active' : '' %>">
                                        <a class="usersPage" href="javascript:;"><%= page %></a>
                                    </li>
                                    <% }) %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
