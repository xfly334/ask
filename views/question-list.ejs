<% replies.forEach(function (reply, index) { %>
<div class="aw-item" id="<%= reply._id %>" off="true">
    <!-- 回复头部 -->
    <div class="mod-head">
        <a href="/user/<%= reply.author.name %>" class="aw-user-img aw-border-radius-5">
            <img src="<%= reply.author.avatar %>" alt="">
        </a>
        <div class="title">
            <p>
                <a href="/user/<%= reply.author.name %>" class="aw-user-name"><%= reply.author.name %></a>
            </p>
        </div>
    </div>
    <!-- 回复的内容 -->
    <div class="mod-body clearfix">
        <div class="markitup-box">
            <%- markdown(reply.content) %>
        </div>
    </div>

    <!-- 回复的底部 -->
    <div class="mod-footer">
        <!-- 回复的操作按钮 -->
        <div class=" clearfix">
            <span class="text-color-999 pull-right"><%= reply.create_time_ago() %></span>
            <span class="operate">
                        <a href="javascript:;" class="reply-agree">
                            <i class="fa fa-thumbs-o-up"></i>
                            <b class="count">0</b>
                        </a>
                    </span>
            <span class="operate">
                        <a href="javascript:;" class="reply-disagree">
                            <i class="fa fa-thumbs-o-down"></i>
                            <b class="count">0</b>
                        </a>
                    </span>
            <span class="operate">
                        <a href="javascript:;" class="aw-add-comment" content="<%= reply.comment_num %>条评论">
                            <i class="fa fa-commenting-o"></i>
                            <%= reply.comment_num %>条评论
                        </a>
                    </span>
        </div>
        <!-- 二级回复的显示位置 -->
        <div class="aw-comment-box hide">
            <div class="aw-comment-list" style="border-bottom:0;">
                <div align="center" class="aw-padding10" style="border-bottom:1px solid #F5F5F5;">
                    <p><%= reply.comment_num %>条评论</p>
                </div>
                <div class="loading text-center" style="font-size: 30px;">
                    <i class="fa fa-spinner fa-pulse" style="line-height: 60px;"></i>
                </div>
                <!-- 二级回复列表要插入的位置 -->
                <div class="add-comment-list"></div>
                <div class="add-comment-page"></div>
                <form action="/<%= question._id %>/comment" style="background:none;padding:10px 0px">
                    <input type="hidden" name="reply_id" value="<%= reply._id %>">
                    <input type="hidden" name="comment_target_id" value="">
                    <div class="aw-comment-box-main">
                        <div class="comment_markdown pull-left public" style="padding: 10px;" placeholder="请写下你的评论..."
                             contenteditable></div>
                        <span class="pull-right aw-comment-box-main-btn">
                    <input class="commentBtn commentBtn-one btn btn-success" type="submit" value="评论" disabled>
                </span>
                        <div class="clearfix"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% }) %>